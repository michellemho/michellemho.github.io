---
---
{
"type": "FeatureCollection",
"features": [
{% assign places = site.posts  %}
{% for place in places %}
{
"type": "Feature",
"properties": {
"date": "{{ place.date | date_to_string }}",
"color": {% if place.tags contains 'upcoming' %}"#9b59b6"{% else %}"#4F518C"{% endif %},
"description":"<a href='{{ place.url }}'><strong>{{ place.title }}</strong></a>",
"icon": "car",
"title": "{{ place.title }}",
"url": "{{site.url}}{{place.url}}"
},
"geometry": {
"type": "Point",
"coordinates": [{{ place.coordinates }}]
}
}
{% if forloop.rindex > 1 %},{% endif%}{% endfor %}
]
}
